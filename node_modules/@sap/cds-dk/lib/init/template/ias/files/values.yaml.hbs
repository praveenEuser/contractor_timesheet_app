{{#hasMultitenancy}}
sidecar:
  expose:
    gateway: default/kyma-mtls-gateway
    host: {{#literal}}"{{ .Release.Name }}-sidecar-{{ .Release.Namespace }}.cert"{{/literal}}
  bindings:
    auth:
      serviceInstanceName: identity
      parameters:
        credential-type: X509_GENERATED
        app-identifier: mtx
{{/hasMultitenancy}}
{{#hasApprouter}}
approuter:
  expose:
    gateway: default/kyma-mtls-gateway
    host: {{#literal}}"{{ .Release.Name }}-approuter-{{ .Release.Namespace }}.cert"{{/literal}}
  bindings:
    auth:
      serviceInstanceName: identity
        parameters:
          credential-type: X509_GENERATED
          app-identifier: approuter
{{/hasApprouter}}
srv:
  expose:
    gateway: default/kyma-mtls-gateway
    host: {{#literal}}"{{ .Release.Name }}-srv-{{ .Release.Namespace }}.cert"{{/literal}}
  bindings:
    auth:
      serviceInstanceName: identity
      parameters:
        credential-type: X509_GENERATED
        app-identifier: srv

identity:
  serviceOfferingName: identity
  servicePlanName: application
  parameters:
    display-name: {{appName}}
    {{#hasMultitenancy}}
    multi-tenant: true
    {{/hasMultitenancy}}
    {{#hasXsuaa}}
    xsuaa-cross-consumption: true
    {{/hasXsuaa}}
    oauth2-configuration:
      token-policy:
        access-token-format: "jwt"
    {{#hasApprouter}}
      redirect-uris:
        {{=<% %>=}}
        - https://*.{{ tpl .Values.global.domain . }}/login/callback
        <%={{ }}=%>
      post-logout-redirect-uris:
        {{=<% %>=}}
        - https://*.{{ tpl .Values.global.domain . }}/*/logout.html
        <%={{ }}=%>
    {{/hasApprouter}}
