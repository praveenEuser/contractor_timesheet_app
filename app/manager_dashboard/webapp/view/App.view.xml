<mvc:View
  controllerName="com.contractor.managerdashboard.managerdashboard.controller.App"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">

  <VBox class="sapUiSmallMargin">
    <Title text="Manager Dashboard" level="H1" class="sapUiSmallMarginBottom" />

    <f:GridList
      id="gridList"
      items="{/tiles}"
      growing="true"
      noDataText="No tiles available">

      <f:items>
        <f:GridListItem>
          <GenericTile
            header="{title}"
            subheader="{subtitle}"
            press="onTilePress"
            class="sapUiSmallMargin"
            frameType="OneByOne">

            <TileContent>
              <core:Icon
                src="{icon}"
                size="3rem"
                color="Accent" />
            </TileContent>

          </GenericTile>
        </f:GridListItem>
      </f:items>
    </f:GridList>
  </VBox>

</mvc:View>
